type User {
  id: ID! @id
  email: String! @unique
  name: String!
  password: String!
  jokes: [Joke!]!
}
type Joke {
  id: ID! @id
  content: String!
  published: Boolean! @default(value: false)
  author: User @relation(link: INLINE)
  comments: [Comment]
}

type Comment {
  id: ID! @id
  author: User @relation(link: INLINE)
  joke: Joke @relation(link: INLINE)
  content: String!
}

type Vote {
  id: ID! @id
  author: User @relation(link: INLINE)
  joke: Joke @relation(link: INLINE)
  value: Int!
}
